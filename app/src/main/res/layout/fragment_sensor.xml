<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.fec.ex.sensorz.view.SensorFragment">

    <TextView
        android:id="@+id/tvSFSensorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensor Name"
        android:textColor="@color/colorText"
        android:textSize="16sp"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/tvSFSensorType"
        android:layout_below="@id/tvSFSensorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:text="Sensor Type"
        android:textSize="12sp"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"/>
    <TextView
        android:id="@+id/tvSFSensorValue"
        android:layout_below="@id/tvSFSensorType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensor Value"
        android:textColor="@color/colorText"
        android:textSize="12sp"
        android:padding="8dp"/>

</RelativeLayout>
